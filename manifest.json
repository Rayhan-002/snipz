{
  "manifest_version": 3,
  "name": "Snipping Tool Extension",
  "version": "1.0",
  "permissions": [
    "tabs",
    "scripting",
    "clipboardWrite",
    "downloads"
  ],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }
}
